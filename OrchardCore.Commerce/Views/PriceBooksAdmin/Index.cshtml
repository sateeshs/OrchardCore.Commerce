@model PriceBooksIndexViewModel
@{
    var returnUrl = Context.Request.Path;
}

<h1>@RenderTitleSegments(T["Price Books"])</h1>

<nav class="admin-toolbar">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <a asp-route-area="OrchardCore.Contents"
               asp-route-controller="Admin"
               asp-route-action="Create"
               asp-route-id="PriceBook"
               asp-route-returnUrl="@returnUrl"
               class="btn btn-primary"
               role="button">@T["Add Price Book"]</a>
        </li>
    </ul>
    <form asp-action="Index" method="get" class="form-inline my-2 my-lg-0">
        <input id="search-box" asp-for="Options.Search" class="form-control mr-sm-2" type="text" placeholder="@T["Search"]" autofocus="autofocus">
        <button type="submit" class="btn btn-secondary">@T["Search"]</button>
    </form>
</nav>

<form asp-action="Index">
    @* the form is necessary to generate and antiforgery token for the delete action *@
    @if (Model.ContentItems.Any())
    {
        <ul class="list-group">
            @foreach (var entry in Model.ContentItems)
            {
                <li class="list-group-item">
                    @await DisplayAsync(entry)
                </li>
            }
        </ul>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            @T["<strong>Nothing here!</strong> There are no price books for the moment."]
        </div>
    }
</form>

@await DisplayAsync(Model.Pager)